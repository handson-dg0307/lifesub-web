apiVersion: v1
data:
  runtime-env.js: "window.__runtime_config__ = { \n  MEMBER_URL: 'http://${ingress_host}/api/auth',\n\
    \  MYSUB_URL: 'http://${ingress_host}/api/mysub',\n  RECOMMEND_URL:\
    \ 'http://${ingress_host}/api/recommend'\n};\n"
kind: ConfigMap
metadata:
  name: runtime-env-config
  namespace: ${namespace}

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lifesub-web
  namespace: ${namespace}
spec:
  replicas: ${replicas}
  selector:
    matchLabels:
      app: lifesub-web
  template:
    metadata:
      labels:
        app: lifesub-web
    spec:
      containers:
      - image: ${lifesub_web_image_path}
        imagePullPolicy: Always
        name: lifesub-web
        ports:
        - containerPort: ${export_port}
        resources:
          limits:
            cpu: ${resources_limits_cpu}
            memory: ${resources_limits_memory}
          requests:
            cpu: ${resources_requests_cpu}
            memory: ${resources_requests_memory}
        volumeMounts:
        - mountPath: /usr/share/nginx/html/runtime-env.js
          name: runtime-env-volume
          subPath: runtime-env.js
      volumes:
      - configMap:
          name: runtime-env-config
        name: runtime-env-volume

---
apiVersion: v1
kind: Service
metadata:
  name: lifesub-web
  namespace: ${namespace}
spec:
  ports:
  - port: 80
    targetPort: ${export_port}
  selector:
    app: lifesub-web
  type: LoadBalancer